#include "datetime_call.h"
#include "esphome/core/log.h"
#include "datetime.h"

namespace esphome {
namespace datetime {

static const char *const TAG = "datetime";

DatetimeCall &DatetimeCall::set_all(const ESPTime &value, bool has_date, bool has_time) 
{
  return this->with_operation(DATETIME_OP_SET_ALL).with_values(value, has_date, has_time);
}

DatetimeCall &DatetimeCall::set_value(const ESPTime &value) 
{
  return this->with_operation(DATETIME_OP_SET_DATETIME).with_value(value);
}

DatetimeCall &DatetimeCall::set_has_date(const bool has_date) 
{
  return this->with_has_date(has_date);
}

DatetimeCall &DatetimeCall::set_has_time(const bool has_time) 
{
  return this->with_has_time(has_time);
}

DatetimeCall &DatetimeCall::with_operation(DatetimeOperation operation) {
  this->operation_ = operation;
  return *this;
}

DatetimeCall &DatetimeCall::with_values(ESPTime value, bool has_date, bool has_time) {
  this->value_ = value;
  this->has_date_ = has_date;
  this->has_time_ = has_time;
  return *this;
}

DatetimeCall &DatetimeCall::with_value(ESPTime value) {
  this->value_ = value;
  return *this;
}

DatetimeCall &DatetimeCall::with_has_date(bool has_date) {
  this->has_date_ = has_date;
  return *this;
}

DatetimeCall &DatetimeCall::with_has_time(bool has_time) {
  this->has_time_ = has_time;
  return *this;
}

bool DatetimeCall::validate_all_() {
  const auto *name = this->parent_->get_name().c_str();

  if (!this->value_.has_value()) {
    ESP_LOGW(TAG, "'%s' - No value set for Datetime", name);
    return false;
  }
  if (!this->has_date_.has_value()) {
    ESP_LOGW(TAG, "'%s' - No has_date set for Datetime", name);
    return false;
  }
  if (!this->has_time_.has_value()) {
    ESP_LOGW(TAG, "'%s' - No has_time set for Datetime", name);
    return false;
  }
  return true;
}

void DatetimeCall::perform() 
{
  auto *parent = this->parent_;
  const auto *name = parent->get_name().c_str();
  const auto &traits = parent->traits;


  ESPTime target_value{0};
  bool target_has_date{0};
  bool target_has_time{0};

  //load stored values if there are any
  if (this->value_.has_value()) {
    target_value = value_.value();
  }
  if (this->has_date_.has_value()) {
    target_has_date = has_date_.value();
  }
  if (this->has_time_.has_value()) {
    target_has_time = has_time_.value();
  }

  switch (this->operation_)
  {
  case DATETIME_OP_NONE:
    ESP_LOGW(TAG, "'%s' - Datetime performed without selecting an operation", name);
    return;

  case DATETIME_OP_SET_ALL:
    ESP_LOGD("mydebug", "in DATETIME_OP_SET_ALL");
    if( !this->validate_all_() )
      return;

    ESP_LOGD(TAG, "'%s' - Setting Datetime value:%s , has_date: %s and has_time: %s", name,
              target_value.strftime("%F %T").c_str(), this->has_date_.value(), this->has_time_.value());
    target_value = this->value_.value();
    target_has_date = this->has_date_.value();
    target_has_time = this->has_time_.value();
    break;
  case DATETIME_OP_SET_DATETIME:
    if (!this->value_.has_value())
      return ESP_LOGW(TAG, "'%s' - No value set for Datetime", name);
    
    target_value = this->value_.value();
    ESP_LOGD(TAG, "'%s' - Setting Datetime value: %s", name, target_value.strftime("%F %T").c_str());
    break;
  case DATETIME_OP_SET_HAS_DATE_AND_HAS_TIME:
    if (!this->has_date_.has_value() || !this->has_time_.has_value() )
      return ESP_LOGW(TAG, "'%s' - No has_date set for Datetime", name);

    target_has_date = this->has_date_.value();
    target_has_time = this->has_time_.value();
    ESP_LOGD(TAG, "'%s' - Setting Datetime has_date: %s has time: %s", name, this->has_date_.value(), this->has_time_.value());
    break;

  case DATETIME_OP_SET_ALL_SET_ONES:
    if (this->has_date_.has_value() ) {
      target_value = this->value_.value();
    }
    if (this->has_date_.has_value() ) {
      target_has_date = this->has_date_.value();
    }
    if (this->has_time_.has_value() ) {
      target_has_time = this->has_time_.value();
    }

    break;
  }
  
  this->parent_->control(target_value, target_has_date, target_has_time);
}

}  // namespace datetime
}  // namespace esphome
